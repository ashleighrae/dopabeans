{
  "manifest_version": 2,
  "name": "Cozmos",
  "version": "1.0",
  "description": "This extension will create a popup for....",
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>", "tabs"],
  
  "browser_action": {
    "default_title": "Does a thing when you do a thing",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/beans.png",
      "32": "icons/beans.png",
      "128": "icons/beans.png"
    }
  }
}